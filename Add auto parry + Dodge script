local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local lp = Players.LocalPlayer
local char = lp.Character or lp.CharacterAdded:Wait()
local hrp = char:WaitForChild("HumanoidRootPart")

local autoParry = false
local autoClick = false
local hitboxBola = true

local tool = nil

-- Crear GUI
local screenGui = Instance.new("ScreenGui", lp.PlayerGui)
screenGui.Name = "AutoBladeBallGUI"

local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0, 200, 0, 130)
frame.Position = UDim2.new(0, 10, 0, 10)
frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
frame.BackgroundTransparency = 0.3
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = false -- Vamos a hacer draggable manual para más control

-- Variables para mover ventana
local dragging = false
local dragInput, dragStart, startPos

local function update(input)
    local delta = input.Position - dragStart
    frame.Position = UDim2.new(
        startPos.X.Scale,
        startPos.X.Offset + delta.X,
        startPos.Y.Scale,
        startPos.Y.Offset + delta.Y
    )
end

frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

frame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement and dragging then
        update(input)
    end
end)

-- Título arriba
local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, -30, 0, 30)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundTransparency = 1
title.Text = "Nehemías"
title.Font = Enum.Font.SourceSansBold
title.TextSize = 24
title.TextColor3 = Color3.fromRGB(0, 255, 255)
title.TextStrokeTransparency = 0.7
title.TextScaled = true

-- Botón minimizar
local minimizeBtn = Instance.new("TextButton", frame)
minimizeBtn.Size = UDim2.new(0, 30, 0, 30)
minimizeBtn.Position = UDim2.new(1, -30, 0, 0)
minimizeBtn.Text = "-"
minimizeBtn.Font = Enum.Font.SourceSansBold
minimizeBtn.TextSize = 24
minimizeBtn.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
minimizeBtn.TextColor3 = Color3.new(1, 1, 1)
minimizeBtn.AutoButtonColor = true

local toggled = false
minimizeBtn.MouseButton1Click:Connect(function()
    toggled = not toggled
    if toggled then
        -- Minimizar: esconder botones
        for _, child in pairs(frame:GetChildren()) do
            if child:IsA("TextButton") and child ~= minimizeBtn then
                child.Visible = false
            end
        end
        frame.Size = UDim2.new(0, 200, 0, 30)
        minimizeBtn.Text = "+"
    else
        -- Expandir: mostrar botones
        for _, child in pairs(frame:GetChildren()) do
            if child:IsA("TextButton") and child ~= minimizeBtn then
                child.Visible = true
            end
        end
        frame.Size = UDim2.new(0, 200, 0, 130)
        minimizeBtn.Text = "-"
    end
end)

local function createToggle(text, yPos, callback)
    local btn = Instance.new("TextButton", frame)
    btn.Size = UDim2.new(1, -20, 0, 30)
    btn.Position = UDim2.new(0, 10, 0, yPos)
    btn.Text = text .. ": OFF"
    btn.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.Font = Enum.Font.SourceSansBold
    btn.TextSize = 18
    btn.AutoButtonColor = true

    local toggledBtn = false
    btn.MouseButton1Click:Connect(function()
        toggledBtn = not toggledBtn
        btn.Text = text .. (toggledBtn and ": ON" or ": OFF")
        callback(toggledBtn)
    end)
end

createToggle("Auto Parry", 40, function(state) autoParry = state end)
createToggle("Auto Click", 80, function(state) autoClick = state end)

-- Aumentar hitbox del jugador (herramienta)
local function expandPlayerHitbox()
    tool = lp.Character and lp.Character:FindFirstChildOfClass("Tool")
    if not tool then
        tool = lp.Backpack:FindFirstChildOfClass("Tool")
    end
    if tool and tool.Handle then
